{
  "pluginAlias": "HomebridgeTinxyPlatform",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "platform": {
        "title": "Platform",
        "type": "string",
        "default": "HomebridgeTinxyPlatform",
        "required": true
      },
      "name": {
        "title": "Name",
        "type": "string",
        "required": true
      },
      "apiToken": {
        "title": "API Token",
        "type": "string",
        "required": true
      },
      "apiBaseUrl": {
        "title": "API Base URL",
        "type": "string",
        "default": "https://backend.tinxy.in/v2/devices",
        "required": true
      },
      "debug": {
        "title": "Enable Debug Logging",
        "type": "boolean",
        "default": false
      },
      "devices": {
        "title": "Cached Devices",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "title": "Device ID",
              "type": "string",
              "required": true
            },
            "name": {
              "title": "Device Name",
              "type": "string",
              "required": true
            },
            "switch_type": {
              "title": "Switch Type",
              "type": "string",
              "required": true
            },
            "device_type": {
              "title": "Device Type",
              "type": "string",
              "required": true
            }
          }
        }
      }
    },
    "required": ["platform", "name", "apiToken", "apiBaseUrl"]
  }
}
